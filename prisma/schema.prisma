generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  linkedin  String?
  github    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs        JobData[]
  educations  Education[]
  experiences Experience[]
  skills      Skill[]
  logs        Log[]
}

model Education {
  id           String   @id @default(cuid())
  degree       String
  fieldOfStudy String
  institution  String
  startDate    DateTime
  endDate      DateTime
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Experience {
  id          String   @id @default(cuid())
  title       String
  company     String
  description String?
  startDate   DateTime
  endDate     DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum SkillGroup {
  PROGRAMMING
  LANGUAGE
  MANAGEMENT
  OTHER
}

model Skill {
  id     String     @id @default(cuid())
  name   String
  group  SkillGroup
  userId String
  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model JobData {
  id          String   @id @default(cuid())
  jobTitle    String
  description String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  results       GeneratedResult[]
  interviews    InterviewLog[]
  interviewInfo InterviewInfo?
}

model GeneratedResult {
  id          String   @id @default(cuid())
  cvText      String
  coverLetter String
  summary     String?
  createdAt   DateTime @default(now())
  jobDataId   String
  job         JobData  @relation(fields: [jobDataId], references: [id])
}

model Log {
  id        String   @id @default(cuid())
  action    String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model InterviewLog {
  id        String   @id @default(cuid())
  question  String
  answer    String?
  createdAt DateTime @default(now())
  jobDataId String
  job       JobData  @relation(fields: [jobDataId], references: [id])
}

model InterviewInfo {
  id        String  @id @default(cuid())
  jobDataId String  @unique
  context   String
  feedback  String?
  score     Int?
  job       JobData @relation(fields: [jobDataId], references: [id], onDelete: Cascade)
}
